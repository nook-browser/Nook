{
  "manifest_version": 3,
  "name": "Alarms API Test",
  "version": "1.0.0",
  "description": "Tests chrome.alarms API for Bitwarden compatibility",
  "permissions": [
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Alarms API Test"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

